@{
    ViewBag.Title = "Sivu 1";
}

@section scripts {
    @*viitataan ulkoiseen skriptitiedostoon, missä
        globaalin muuttujan määrittely*@
    <script src="~/Scripts/Testi1.js"></script>
    <script src="~/Scripts/Testi2.js"></script>
    <script type="text/javascript">

        //käytetään jQuerya, alustettu valmiiksi Shared/layout-sivulla
        $(function () {
            //sivun alustus

            var lokaaliArvo = 123;
            alert("Lokaali muuttuja = " + lokaaliArvo);
            alert("Globaali muuttuja = " + globaaliArvo);

            //nappi-klikkauksen tapahtuman käsittelijä
            //nappia klikatessa suoritetaan seuraava funktio
            $("#nappi").click(function () {
                globaaliArvo++; //kasvatetaan globaalimuuttujan arvoa 1:llä
                //globaaliArvo++ on sama asia kuin globaaliArvo = globaaliArvo+1

                //lisätään alert -->nähdään muutos ruudulla
                alert("Globaali muuttuja on " + globaaliArvo);
            });

            $("#näytäNappi").click(function () {
                //kutsutaan scripti-tiedoston funktiota
                näytäArvo1();
                näytäArvo2();
            });
        });
    </script>
}

<h1>Sivu 1</h1>

